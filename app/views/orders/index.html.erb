<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
  <tr>
    <th>Phone</th>
    <th>Items</th>
    <th>Total</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @orders.each do |order| %>
      <tr>
        <td><%= order.phone %></td>

        <td>
          <ol>
            <% JSON.parse(order.cart, symbolize_names: true).each do |item| %>
                <li><%= item[:name] %></li>
            <% end %>
          </ol>
        </td>
        <td><%= order.total %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>
